<body>
  <h2>ðŸ§  Enter your T-shirt Prompt</h2>
  <textarea id="prompt" rows="6" placeholder="Describe your T-shirt idea..."></textarea>
  <button onclick="sendPrompt()">Send Prompt</button>

  <script>
    const tg = window.Telegram.WebApp;
    tg.expand();

    function sendPrompt() {
      const prompt = document.getElementById("prompt").value;

      fetch("https://leo96.app.n8n.cloud/webhook-test/telegram-ai", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          prompt: prompt,
          chat_id: tg.initDataUnsafe.user?.id || tg.initDataUnsafe.chat?.id
        })
      }).then(() => {
        tg.close();
      });
    }
  </script>
