  <h2>ðŸ”— Enter Image URL to Redesign</h2>

  <input type="text" id="imageUrl" placeholder="https://example.com/image.png" />

  <button onclick="sendToN8N()">ðŸŽ¨ Redesign</button>

  <script>
    const tg = window.Telegram.WebApp;
    tg.expand();

    function sendToN8N() {
      const imageUrl = document.getElementById("imageUrl").value;

      fetch("https://leo96.app.n8n.cloud/webhook-test/telegram-ai", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          image_url: imageUrl,
          chat_id: tg.initDataUnsafe.user?.id
        })
      }).then(() => {
        tg.close(); // Ä‘Ã³ng Web App sau khi gá»­i
      });
    }
  </script>
